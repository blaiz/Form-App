<h1>Listing fields for <%= @form.label %></h1>

<table>
  <tr>
    <th>Field</th>
    <th>Type</th>
    <th>Weight</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @form.form_fields.each do |form_field| %>
  <tr>
    <td><%= form_field.field.label %></td>
    <td><%= form_field.field.field_type.label %></td>
    <td><%= form_field.weight %></td>
    <td><%= link_to 'Show', form_field %></td>
    <td><%= link_to 'Edit', edit_form_field_path(form_field) %></td>
    <td><%= link_to 'Destroy', form_field, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

